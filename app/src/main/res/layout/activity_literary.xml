<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <com.github.florent37.materialviewpager.MaterialViewPager
        android:id="@+id/materialViewPagerLiterary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:viewpager_animatedHeaderImage="true"
        app:viewpager_color="@color/colorPrimary"
        app:viewpager_displayToolbarWhenSwipe="true"
        app:viewpager_enableToolbarElevation="true"
        app:viewpager_headerAdditionalHeight="5dp"
        app:viewpager_headerAlpha="1.0"
        app:viewpager_headerHeight="250dp"
        app:viewpager_hideLogoWithFade="false"
        app:viewpager_hideToolbarAndTitle="false"
        app:viewpager_imageHeaderDarkLayerAlpha="0.2"
        app:viewpager_logo="@layout/literary_header_logo"
        app:viewpager_logoMarginTop="130dp"
        app:viewpager_pagerTitleStrip="@layout/material_view_pager_pagertitlestrip_standard"
        app:viewpager_parallaxHeaderFactor="0"
        app:viewpager_transparentToolbar="false" />

</android.support.design.widget.CoordinatorLayout>
