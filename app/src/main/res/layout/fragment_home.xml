<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coreContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.anaadyanta.anaadyanta2k16.fragments.HomeFragment">

    <com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:parallax_factor="1.9">

        <LinearLayout
            android:id="@+id/coreLinearLayoutContanier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/autoScrollContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                    android:id="@+id/autoScrollViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />


                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circleIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|center_horizontal"
                    app:ci_animator="@animator/scale_with_alpha"
                    app:ci_height="8dp"
                    app:ci_margin="6dp"
                    app:ci_width="8dp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/fashionShowCardView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    cardView:cardCornerRadius="6dp"
                    cardView:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/fashionShowImage"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_alignParentTop="true"
                            android:layout_margin="1dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/fashion_show_mod" />


                        <TextView
                            android:id="@+id/fashionShowTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:maxLines="3"
                            android:padding="8dp"
                            android:text="Fashion Show"
                            android:textColor="#ffffff"
                            android:textSize="30sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/danceCardView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    cardView:cardCornerRadius="6dp"
                    cardView:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/danceImage"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_alignParentTop="true"
                            android:layout_margin="1dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/dance" />

                        <TextView
                            android:id="@+id/danceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:maxLines="3"
                            android:padding="8dp"
                            android:text="Dance"
                            android:textColor="#ffffff"
                            android:textSize="30sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/musicCardView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    cardView:cardCornerRadius="6dp"
                    cardView:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
